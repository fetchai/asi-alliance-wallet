{
  "manifest_version": 3,

  "name": "ASI Alliance Wallet",
  "description": "The official ASI Alliance Wallet for interacting with the ASI ledger",
  "version": "0.20.0",
  "icons": {
    "16": "assets/icon/icon-16.png",
    "48": "assets/icon/icon-48.png",
    "128": "assets/icon/icon-128.png"
  },

  "action": {
    "default_popup": "popup-loading.html",
    "default_title": "ASI Alliance Wallet"
  },
  "side_panel": {
    "default_path": "sidepanel-loading.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "identity",
    "idle",
    "alarms",
    "sidePanel",
    "activeTab"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScripts.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injectedScript.bundle.js",
        "assets/logo-256.svg",
        "blocklist.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
